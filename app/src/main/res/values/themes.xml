<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MusicMasher" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#A4CCE3</item>
        <item name="colorPrimaryVariant">#A4CCE3</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#FFA76D</item>
        <item name="colorSecondaryVariant">#FFA76D</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.MusicMasher.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="MySwitch" parent="@style/Widget.AppCompat.CompoundButton.Switch">
        <item name="android:textColorPrimaryDisableOnly">#b71c1c</item>
        <item name="android:colorControlActivated">#1b5e20</item>
        <item name="android:colorForeground">#f57f17</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat</item>
    </style>

    <style name="Theme.MusicMasher.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.MusicMasher.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>