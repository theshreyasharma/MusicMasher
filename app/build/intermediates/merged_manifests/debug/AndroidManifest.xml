<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.musicmasher"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="21"
        android:targetSdkVersion="31" />

    <application
        android:allowBackup="true"
        android:appComponentFactory="androidx.core.app.CoreComponentFactory"
        android:debuggable="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:testOnly="true"
        android:theme="@style/Theme.MusicMasher" >
        <activity
            android:name="com.example.musicmasher.MoodFinder"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.MusicMasher.NoActionBar" >
        </activity>
        <activity
            android:name="com.example.musicmasher.PFPActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.MusicMasher.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.musicmasher.Mash"
            android:exported="true"
            android:label="Masher"
            android:theme="@style/Theme.MusicMasher.NoActionBar" >
        </activity>
        <activity
            android:name="com.example.musicmasher.ListeningHistory"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.MusicMasher.NoActionBar" >
        </activity>
        <activity
            android:name="com.example.musicmasher.PlaylistGenerated"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.MusicMasher.NoActionBar" >
        </activity>
        <activity
            android:name="com.example.musicmasher.Login"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.MusicMasher.NoActionBar" >
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>